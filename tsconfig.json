{
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "strict":true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
